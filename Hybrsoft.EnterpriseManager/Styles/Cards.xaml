<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="CardSuperHeader" TargetType="TextBlock">
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="TextWrapping" Value="WrapWholeWords"/>
		<Setter Property="FontSize" Value="15" />
		<Setter Property="IsTextSelectionEnabled" Value="True" />
	</Style>

	<Style x:Key="CardHeader" TargetType="TextBlock">
		<Setter Property="Margin" Value="0,4,0,0" />
		<Setter Property="FontSize" Value="13" />
	</Style>

	<Style x:Key="CardText" TargetType="TextBlock">
		<Setter Property="Margin" Value="0,2,0,4" />
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="TextWrapping" Value="WrapWholeWords"/>
		<Setter Property="FontSize" Value="15" />
		<Setter Property="IsTextSelectionEnabled" Value="True" />
	</Style>

	<Style x:Key="FormsSection" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundAccentBrush}" />
		<Setter Property="FontSize" Value="15" />
		<Setter Property="FontWeight" Value="SemiBold" />
	</Style>
</ResourceDictionary>
