<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="Hybrsoft.EnterpriseManager.Views.LicenseActivationView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Hybrsoft.EnterpriseManager.Views"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
			<TextBlock x:Uid="/UI/LicenseActivationView_LicenseActivation"
					   FontSize="24"
					   FontWeight="Bold"
					   Margin="0,0,0,20"/>
			<StackPanel Orientation="Horizontal">
				<TextBox x:Name="LicenseKey"
						 x:Uid="/UI/LicenseActivationView_EnterYourLicenseKey"
						 Text="{x:Bind ViewModel.LicenseKey, Mode=TwoWay}"
						 Width="300"/>
				<FontIcon Foreground="{x:Bind ViewModel.InfoForeground, Mode=OneWay}"
						  Glyph="{x:Bind ViewModel.InfoGlyph, Mode=OneWay}"
						  Margin="6,0,0,0"
						  Visibility="{x:Bind ViewModel.HasInfo, Mode=OneWay, Converter={StaticResource DefaultBoolToVisibilityConverter}}"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Button Command="{x:Bind ViewModel.ActivateLicenseCommand}"
						Margin="0,10,0,0"
						IsEnabled="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolNegationConverter}}">
					<StackPanel Orientation="Horizontal">
						<FontIcon Glyph="&#xE8D7;" FontSize="16" Margin="0,0,5,0"/>
						<TextBlock x:Uid="/UI/LicenseActivationView_Activate" VerticalAlignment="Center"/>
					</StackPanel>
				</Button>
				<Button Command="{x:Bind ViewModel.CheckConnectionCommand}"
						Margin="0,10,0,0"
						Visibility="{x:Bind ViewModel.IsInternetAvailable, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
					<StackPanel Orientation="Horizontal">
						<FontIcon Glyph="&#xF384;" FontSize="16" Margin="0,0,5,0"/>
						<TextBlock x:Uid="/UI/LicenseActivationView_CheckConnection" VerticalAlignment="Center"/>
					</StackPanel>
				</Button>
			</StackPanel>
		</StackPanel>

		<Grid Grid.Row="1">
			<InfoBar IsOpen="{x:Bind ViewModel.IsOpen, Mode=TwoWay}"
					 Severity="{x:Bind ViewModel.Severity, Mode=TwoWay}"
					 Title="{x:Bind ViewModel.MessageTitle, Mode=OneWay}"
					 Message="{x:Bind ViewModel.Message, Mode=OneWay}" />
		</Grid>
	</Grid>
</Page>
