<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="Hybrsoft.EnterpriseManager.Views.MainShellView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Hybrsoft.EnterpriseManager.Views"
	xmlns:controls="using:Hybrsoft.EnterpriseManager.Controls"
	xmlns:models="using:Hybrsoft.UI.Windows.Models"
	xmlns:userModel="using:Hybrsoft.UI.Windows.Infrastructure.Commom"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.Resources>
			<DataTemplate x:Name="NavigationViewItem" x:DataType="models:NavigationItemModel">
				<NavigationViewItem Icon="{x:Bind Icon}"
									Content="{x:Bind Label}"
									InfoBadge="{x:Bind Badge, Mode=TwoWay}"
									MenuItemsSource="{x:Bind Children}"/>
			</DataTemplate>
		</Grid.Resources>

		<!-- App Title Bar -->
		<controls:ModernTitle x:Name="ModernTitleBar"
							  DisplayName="{x:Bind ViewModel.UserInfo.DisplayName, Mode=OneWay}"
							  PictureSource="{x:Bind ViewModel.UserInfo.PictureSource, Mode=OneWay}"
							  AccountName="{x:Bind ViewModel.UserInfo.AccountName, Mode=OneWay}"
							  LogoffClicked="OnLogoff"/>

		<!-- Navigation View -->
		<NavigationView x:Name="NavigationView"
						Grid.Row="1"
						MenuItemsSource="{x:Bind ViewModel.NavigationItems, Mode=OneWay}"
						MenuItemTemplate="{StaticResource NavigationViewItem}"
						SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
						SelectionChanged="OnSelectionChanged"
						IsPaneOpen="{x:Bind ViewModel.IsPaneOpen, Mode=TwoWay}"
						IsEnabled="{x:Bind ViewModel.IsEnabled, Mode=OneWay}"
						BackRequested="NavigationView_BackRequested">
			<Grid>
				<Frame x:Name="frame">
					<Frame.ContentTransitions>
						<TransitionCollection>
							<NavigationThemeTransition/>
						</TransitionCollection>
					</Frame.ContentTransitions>
				</Frame>
			</Grid>
		</NavigationView>

		<!-- Infor Bar -->
		<Grid Grid.Row="2">
			<InfoBar IsOpen="{x:Bind ViewModel.IsOpen, Mode=TwoWay}"
					 Severity="{x:Bind ViewModel.Severity, Mode=TwoWay}"
					 Title="{x:Bind ViewModel.MessageTitle, Mode=TwoWay}"
					 Message="{x:Bind ViewModel.Message, Mode=OneWay}" />
		</Grid>
	</Grid>
</Page>
