<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="Hybrsoft.EnterpriseManager.Views.ShellView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Hybrsoft.EnterpriseManager.Views"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:controls="using:Hybrsoft.EnterpriseManager.Controls"
	mc:Ignorable="d">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
			<controls:ModernTitle x:Name="ModernTitleBar"/>
		</Grid>

		<Grid Grid.Row="1">
			<Frame x:Name="frame" IsEnabled="{x:Bind ViewModel.IsEnabled, Mode=OneWay}">
				<Frame.ContentTransitions>
					<TransitionCollection>
						<NavigationThemeTransition/>
					</TransitionCollection>
				</Frame.ContentTransitions>
			</Frame>
		</Grid>

		<Grid Grid.Row="2">
			<InfoBar IsOpen="{x:Bind ViewModel.IsOpen, Mode=TwoWay}"
					 Severity="{x:Bind ViewModel.Severity, Mode=TwoWay}"
					 Title="{x:Bind ViewModel.MessageTitle, Mode=OneWay}"
					 Message="{x:Bind ViewModel.Message, Mode=OneWay}" />
		</Grid>

		<Grid Grid.Row="1"
			  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
			  Visibility="{x:Bind ViewModel.IsLocked, Mode=OneWay}">
			<StackPanel VerticalAlignment="Center">
				<Image Source="ms-appx:///Assets/SplashScreen.scale-200.png"
					   Width="640" />
				<TextBlock x:Uid="/UI/ShellView_ApplicationIsLocked"
						   FontSize="18"
						   HorizontalAlignment="Center" />
				<HyperlinkButton x:Uid="/UI/ShellView_SwitchToMainViewToUnlock"
								 Click="OnUnlockClick"
								 FontSize="18"
								 HorizontalAlignment="Center"
								 VerticalAlignment="Center" />
			</StackPanel>
		</Grid>
	</Grid>
</Page>
